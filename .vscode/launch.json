    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch local Node.js (4000)",
            "program": "${workspaceFolder}/server.js",
            "args": ["4000"],
            "auto": false
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to local Nodes.js (9229)",
            "address": "127.0.0.1",
            "port": 9229,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${workspaceFolder}",
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to remote Node.js (9229)",
            "address": "127.0.0.1",
            "port": 9229,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/home/minesweeper"
        }
    ]
}